<% layout('layouts/boilerplate')%>
    <div class="row">
       
        <div class="col-md-6 offset-md-3">
            <h1>Edit Profile</h1>

            <form action="/user/<%=user._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="name">
                        Name
                    </label>
                    <input class="form-control" type="text" id="name" name="user[name]" value="<%=user.name %>" required>
                    <div class="valid-feedback">
                        Done!
                    </div>
                </div>
              
                  <div class="mb-3">
                    <label class="form-label" for="bio">
                        Bio
                    </label>
                    <textarea  class="form-control" type="text" id="bio" name="user[bio]"  ><%=user.bio %></textarea>
                    <div class="valid-feedback">
                        Done!
                    </div>
                </div>
              
                    
                </div>
                 
               
              
                <a href="/user/<%= user._id%>">Back To Profile</a>
                <div class="mt-3 mb-3">
                    <button type="submit" class="btn btn-success">Edit Profile</button>

                </div>
               
               
           
          
           
        
            </form>
   
